          <input type="file" id="fichier" name="fichier" accept=".stl, .obj, .png, .jpg, .jpeg" />
        </fieldset>

        <fieldset>
          <legend>Vos informations</legend>
          <label for="nom">Nom :</label>
          <input type="text" id="nom" name="nom" required />

          <label for="email">E-mail :</label>
